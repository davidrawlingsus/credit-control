# Credit Control System Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
COMPANY_NAME=Rawlings MI Ltd
COMPANY_EMAIL=credit-control@rawlings.us
COMPANY_PHONE=1-800-CREDIT-1
COMPANY_WEBSITE=https://rawlings.us

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development: SQLite (local file)
# Production: PostgreSQL (Railway)
DATABASE_URL=sqlite:./dev.db
# DATABASE_URL=postgresql://user:pass@host:port/database

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# GMAIL OAUTH2 CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console OAuth2 setup
GMAIL_CLIENT_ID=your_oauth2_client_id
GMAIL_CLIENT_SECRET=your_oauth2_client_secret
GMAIL_REFRESH_TOKEN=your_refresh_token
GMAIL_USER=david@rawlings.us

# =============================================================================
# OPENAI CONFIGURATION (Planned)
# =============================================================================
# Get this from OpenAI Dashboard
OPENAI_API_KEY=sk-...

# =============================================================================
# JWT CONFIGURATION (Planned)
# =============================================================================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Plain-text email persona settings
# Emails are sent as plain text with first-name greeting and a standard signature
EMAIL_FROM=Rawlings MI Ltd <credit-control@rawlings.us>
EMAIL_REPLY_TO=credit-control@rawlings.us
EMAIL_SIGNATURE="Best regards,\nDavid's Credit Control Bot\nRawlings MI Ltd"
EMAIL_TEST_MODE=true
# When EMAIL_TEST_MODE=true (default in dev), all chase emails are routed to TEST_EMAIL_RECIPIENT (or COMPANY_EMAIL) instead of the customer.
# Set to false in production to send to customers.

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
# For caching and session storage
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS settings for frontend
CORS_ORIGIN=http://localhost:3000
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode
DEBUG=false
# Enable detailed logging
VERBOSE_LOGGING=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database
TEST_DATABASE_URL=sqlite:./test.db
# Test email recipient
TEST_EMAIL_RECIPIENT=david@rawlings.us 